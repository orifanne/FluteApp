<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ori.fluteapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ori.fluteapp.TunerActivity" android:label="@string/title_activity_tuner" android:screenOrientation="portrait">
        </activity><activity android:name="ori.fluteapp.EditorActivity" android:label="@string/title_activity_editor" android:screenOrientation="portrait">
        </activity><activity android:name="ori.fluteapp.TutorActivity" android:label="@string/title_activity_tutor" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
